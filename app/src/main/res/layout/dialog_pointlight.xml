<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_marginLeft="60dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="位置："
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="x:"
            />
        <EditText
            android:id="@+id/plight_position_x"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            />
         <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="y:"
            />
        <EditText
            android:id="@+id/plight_position_y"
            android:layout_width="50dp"
            android:layout_height="wrap_content"/>
          <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="z:"
            />
        <EditText
            android:id="@+id/plight_position_z"
            android:layout_width="50dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="Ambient："
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="r:"
            />
        <EditText
            android:id="@+id/plight_ambient_r"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            />
         <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="g:"
            />
        <EditText
            android:id="@+id/plight_ambient_g"
            android:layout_width="50dp"
            android:layout_height="wrap_content"/>
          <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="b:"
            />
        <EditText
            android:id="@+id/plight_ambient_b"
            android:layout_width="50dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="diffuse："
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="r:"
            />
        <EditText
            android:id="@+id/plight_diffuse_r"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            />
         <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="g:"
            />
        <EditText
            android:id="@+id/plight_diffuse_g"
            android:layout_width="50dp"
            android:layout_height="wrap_content"/>
          <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="b:"
            />
        <EditText
            android:id="@+id/plight_diffuse_b"
            android:layout_width="50dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>

     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="specular："
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="r:"
            />
        <EditText
            android:id="@+id/plight_specular_r"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            />
         <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="g:"
            />
        <EditText
            android:id="@+id/plight_specular_g"
            android:layout_width="50dp"
            android:layout_height="wrap_content"/>
          <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="b:"
            />
        <EditText
            android:id="@+id/plight_specular_b"
            android:layout_width="50dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>



</LinearLayout>