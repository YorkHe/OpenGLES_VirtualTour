<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="方向光源"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="99dp"
        android:layout_marginBottom="19dp"
        android:id="@+id/dirLight"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="点光源"
        android:layout_alignBaseline="@id/dirLight"
        android:layout_alignBottom="@id/dirLight"
        android:layout_alignParentEnd="true"
        android:id="@+id/pointLight"/>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="纳米服"
        android:id="@+id/nanosuit"
        android:layout_above="@+id/pointLight"
        android:layout_alignParentEnd="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="雕像"
        android:id="@+id/statue"
        android:layout_above="@+id/dirLight"
        android:layout_alignStart="@+id/dirLight"/>

</RelativeLayout>

